.discovery-tab {
  width: 750rpx;
  height: 100rpx;
  background: #298de5;
  color: #8ccefd;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
  margin: 0 0 8rpx 0;
  position: fixed;
  z-index: 9999;
}

.top-click {
  width: 750rpx;
  height: 100rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
  margin: 0 0 8rpx 0;
}

.top-click.active {
  color: #fff;
  border-bottom: solid 3px #fff;
}

