<view>
  <view class='notify-tab'>
    <view class="notify-topTab {{currentNavtab === idx ? 'notify-active' : ' '}}" wx:for="{{navTab}}" wx:for-index="idx" wx:for-item="itemName" data-idx="{{idx}}" bindtap="switchTab" >
      {{itemName}}
    </view>
  
  </view>
  <scroll-view scroll-y="true" bindscrolltoupper="upper" bindscrolltolower="lower" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}" class='notify-withtab'>
    <view hidden="{{currentNavtab === 0 ? '' : true}}">
      <view class="unread">
        <text>0 条未读</text>
        <image src="../../images/allread.png"></image>
      </view>
      <view class='notify-items'>
        <view class="avatar">
          <image src="../../images/icon1.jpeg"></image>
        </view>
        <view class="notify-content">
          <text class="notify-source">Rebecca  回答了问题</text>
          <text class="notify-title">C#如何在不覆盖原有文件的情况下直接修改某一部分的内容？</text>
        </view>
      </view>
    </view>
    <view class='ctnt1' hidden="{{currentNavtab == 1 ? '' : true}}"></view>
    <view class='ctnt2' hidden="{{currentNavtab == 2 ? '' : true}}"></view>
  </scroll-view>
</view>