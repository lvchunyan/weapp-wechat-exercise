<!--pages/chat/chat.wxml-->
<view>
  <view wx:for="{{chatContent}}">
    <view class='chat chat-wrp'>
      <view class='chat-wrp avatar'>
        <image src="{{item.src}}"></image>
         <view class='chat-item'>
          <view class='chat-name'>{{item.name}}</view>
          <view class='chat-content'>{{item.content}}</view>
        </view>
      </view>
      <view>
        <text class='chat-content'>{{item.time}}</text>
      </view>
    </view>
  </view>
</view>